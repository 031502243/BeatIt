<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="#000000"/>
    <LinearLayout
        android:id="@+id/dialog_course_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:background="@drawable/background_rectangle_round_white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="21dp"
            android:gravity="center"
            android:text="您要加入的课堂是："
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#edf9ff">
            <TextView
                android:id="@+id/text_dialog_course_add_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="课程名称"
                android:textSize="28sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="36dp"
                android:gravity="center"
                android:text="老师"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/text_dialog_course_add_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="老师名称"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_course_dialog_add_confirm"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="60dp"
                android:gravity="center"
                android:text="确认"
                android:textSize="14sp"
                android:background="@drawable/background_rectangle_round_dialog_green"/>
            <TextView
                android:id="@+id/btn_course_dialog_add_cancel"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:text="取消"
                android:textSize="14sp"
                android:background="@drawable/background_rectangle_round_dialog_gray"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>