<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/dialog_submit_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="27dp"
        android:background="@drawable/background_rectangle_round_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dialog_submit_show"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="27dp"
            android:cropToPadding="true"
            android:elevation="@dimen/hw_elevation_2"
            android:gravity="center"/>

        <TextView
            android:id="@+id/text_dialog_submit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="照片名称"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="是否删除图片？"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dialog_submit_delete_confirm"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:background="@drawable/background_rectangle_round_dialog_green"
                android:gravity="center"
                android:text="确认"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_dialog_submit_delete_cancel"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:background="@drawable/background_rectangle_round_dialog_gray"
                android:gravity="center"
                android:text="取消"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>